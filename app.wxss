.point_instru {
  min-height: 570rpx;
  position: fixed;
  bottom: -575rpx;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 -2px 3px rgba(0,0,0,0.1);
}
.point_instru icon {
  position: absolute;
  right: 16rpx;
  top: 16rpx;
}
.point_instru .text_wrp {
  padding: 25rpx 30rpx;
}
.point_instru .text_wrp .title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #353535;
  margin-top: 10rpx;
}
.point_instru .text_wrp p {
  display: block;
  font-size: 28rpx;
  text-indent: 2em;
  color: #888;
}
.point_instru .btn-area {
  position: absolute;
  margin: 0 0 0 -345rpx;
  left: 50%;
  bottom: 10rpx;
}

.btn-area {
  margin: 10rpx auto;
  width: 690rpx;
}
.btn-area .submit {
  width: 100%;
  background-color: #ec5e3a;
  color: #fff;
}

.toast_wrp {
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(0,0,0,0.5);
  border-radius: 10rpx;
  position: fixed;
  top: 20rpx;
  left: 50%;
  margin-left: -100rpx;
  z-index: 9999;
}
.toast_wrp .toast image {
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx;
}
.toast_wrp .toast text {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}


.cropper-wrapper{
    position: fixed;
    display: flex;
    flex-direction: row;
    /* justify-content: space-between; */
    align-items: center;
    justify-content: center;
    /* height: 100%; */
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #000;
    z-index: 999;
}
.cropper-buttons{
    display: flex;
    flex-direction: row;
    /* justify-content: space-between; */
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50px;
    line-height: 50px;
    z-index: 1000;
}
.cropper-buttons .upload, .cropper-buttons .getCropperImage{
    width: 50%;
    text-align: center;
}
.cropper{
    position: absolute;
    top: 0;
    left: 0;
}
.cropper-buttons{
    background-color: rgba(0, 0, 0, 0.95);
    color: #eee;
}