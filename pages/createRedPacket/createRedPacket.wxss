/* pages/createRedPacket/createRedPacket.wxss */
form {
  display: block;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}
.send_red_packet .token_wrp {
  width: 662rpx;
  background-color: #fff;
  font-size: 34rpx;
  height: 88rpx;
  padding: 0 20rpx;
  border-radius: 6rpx;
  margin-top: 40rpx;
}
.send_red_packet .token_wrp .title {
  line-height: 88rpx;
  vertical-align: middle;
}
.send_red_packet .token_wrp .input {
  width: 400rpx;
  line-height: 88rpx;
  height: 88rpx;
  vertical-align: middle;
  text-align: right;
  float: right; 
}
.send_red_packet .token_wrp .options {
  /* display: inline-block; */
  float: right;
  width: 56rpx;
}
.send_red_packet .token_wrp image,
.send_red_packet .token_wrp span {
  width: 36rpx;
  height: 40rpx;
  float: right;
  margin-left: 10rpx;
  margin-top: 24rpx;
}
.send_red_packet .token_wrp .unit {
  margin-top: 22rpx;
}

.send_red_packet .adver_wrp {
  margin: 20rpx 0 30rpx;
}
.send_red_packet .adver_wrp button {
  border: none;
  color: #576b95;
  padding: 0 10rpx;
  margin-top: 10rpx;
}
.send_red_packet .adver_wrp button.delete {
  /* padding: 0; */
  float: right;
  
}
.send_red_packet .adver_wrp button text {
  color: #888;
}
.send_red_packet .adver_wrp .pic_limit {
  display: block;
  font-size: 28rpx;
  color: #888;
  margin-top: -20rpx;
}

.token_prompt {
  display: inline-block;
  font-size: 28rpx;
  color: #b2b2b2;
  margin-top: 16rpx;
}
.recommend {
  width: 690rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  margin-top: 26rpx;
}
.recommend .item {
  display: inline-block;
  width: 100rpx;
  border: 1px solid #ddd;
  font-size: 26rpx;
  color: #b2b2b2;
  text-align: center;
  border-radius: 8rpx;
  background-color: #fff;
  line-height: 50rpx;
}
.recommend .item.selected {
  border-color: #ec5e3a;
  color: #ec5e3a;
}

.checkbox_wrp {
  font-size: 28rpx;
  color: #353535;
  margin-top: 30rpx;
  width: 690rpx;

}
.checkbox_wrp checkbox {
  zoom:60%;
  vertical-align: middle;
  margin-top: -12rpx;
}
.checkbox_wrp label {
  margin: 0 26rpx;
}
.checkbox_wrp .anonymous {
  float: right;
}

.btn-area {
  margin-top: 100rpx;
  width: 690rpx;
}
.btn-area .money_prompt {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #576b95;
  margin-bottom: 24rpx;
}
.btn-area .money_prompt checkbox {
  zoom:60%;
  vertical-align: middle;
  margin-top: -12rpx;
}
.btn-area .submit {
  width: 100%;
  background-color: #ec5e3a;
  color: #fff;
}

.token_options {
  /* display: none; */
  width: 600rpx;
  max-height: 720rpx;
  position: fixed;
  top: 220rpx;
  left: 50%;
  margin-left: -320rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 2px rgba(0,0,0,0.5);
  overflow-y: scroll;
  overflow-x: hidden;
  padding: 20rpx;
  z-index: 999;
}

.token_options .title {
  font-size: 28rpx;
  color: #353535;
  line-height: 40rpx;
  height: 40rpx;
}
.token_options .list .item {
  font-size: 34rpx;
  color: #353535;
  line-height: 72rpx;
  height: 72rpx;
  width: 600rpx;
  overflow: hidden;
  border-bottom: 1px dashed #888;
}


.cropper-wrapper{
    position: fixed;
    display: flex;
    flex-direction: row;
    /* justify-content: space-between; */
    align-items: center;
    justify-content: center;
    /* height: 100%; */
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #000;
    z-index: 999;
}
.cropper-buttons{
    display: flex;
    flex-direction: row;
    /* justify-content: space-between; */
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50px;
    line-height: 50px;
    z-index: 1000;
}
.cropper-buttons .upload, .cropper-buttons .getCropperImage{
    width: 50%;
    text-align: center;
}
.cropper{
    position: absolute;
    top: 0;
    left: 0;
}
.cropper-buttons{
    background-color: rgba(0, 0, 0, 0.95);
    color: #eee;
}